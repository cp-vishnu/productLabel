<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">


     <preference for="Codilar\ProductLabel\Api\Data\ProductLabelInterface" type="Codilar\ProductLabel\Model\Label" />
    <preference for="Codilar\ProductLabel\Api\ProductLabelRepositoryInterface" type="Codilar\ProductLabel\Model\LabelRepository" />
       
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
            	<!-- Data Source will be mentioned in listing xml -->
                <item name="productlabel_listing_data_source" xsi:type="string">Codilar\ProductLabel\Model\ResourceModel\Label\Grid\Collection</item>
            </argument>
        </arguments>
    </type>
    <virtualType name="Codilar\ProductLabel\Model\ResourceModel\Label\Grid\Collection" type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
        	<!-- Table name to insert data and listing data -->
            <argument name="mainTable" xsi:type="string">label_tb</argument>
            <!-- Resource model name -->
            <argument name="resourceModel" xsi:type="string">Codilar\ProductLabel\Model\ResourceModel\Label</argument>
        </arguments>
    </virtualType>


    <type name="Magento\Framework\DB\LoggerInterface">
    <plugin name="my_db_logger" type="Codilar\ProductLabel\Plugin\DbLogger" sortOrder="10" disabled="false"/>
</type>


</config>
<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="label_tb" engine="innodb" comment="Vendor Table">
        <column xsi:type="int" name="id" unsigned="true" nullable="false" identity="true" comment="Vendor ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Vendor Name"/>
        <column xsi:type="int" name="status" nullable="false" default="0" comment="Status"/>
        <column xsi:type="varchar" name="product_image" nullable="true" length="255" comment="Product Image"/>
        <column xsi:type="timestamp" name="from_date" on_update="false" nullable="true" comment="From Date"/>
        <column xsi:type="timestamp" name="to_date" on_update="false" nullable="true" comment="To Date"/>
        <column xsi:type="text" name="conditions_serialized" nullable="true" comment="Conditions Serialized"/>
        
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
